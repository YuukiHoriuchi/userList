<title><%= title %></title>

<%= content %>
<form method="post" action="/users/add">
<table>
    <tr>
        <th>ログイン名</th>
        <td><input type="text" name="name"
            value="<%= form.name %>"></td>
    </tr>
    <tr>
        <th>パスワード</th>
        <td><input type="password" name="password"
            value="<%= form.password %>"></td>
    </tr>
    <tr>
        <th>誕生日(例：2020-09-09)</th>
        <td><input name="birthday"><%= form.birthday %></td>
    </tr>
    <tr>
        <th></th>
        <td><input type="submit" value="作成"></td>
    </tr>
</table>
</form>
